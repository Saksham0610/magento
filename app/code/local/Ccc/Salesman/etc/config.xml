<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Salesman>
            <version>0.3.0</version>
        </Ccc_Salesman>
    </modules>    
    <global>
        <events>
           <salesman_save>
                <observers>
                   <salesman_observer>
                       <type>singleton</type>
                       <class>Ccc_Salesman_Model_Observer</class>
                       <method>saveSalesmanObserve</method>
                    </salesman_observer>
                </observers>
            </salesman_save>
        </events>
        <resources>
            <salesman_setup>
                <setup>
                    <module>Ccc_Salesman</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesman_setup>
            <salesman_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesman_write>
            <salesman_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesman_read>
        </resources>
        <models>
            <salesman>
                <class>Ccc_Salesman_Model</class>
                <resourceModel>salesman_resource</resourceModel>
            </salesman>
            <salesman_resource>
                <class>Ccc_Salesman_Model_Resource</class>
                <deprecatedNode>salesman_mysql4</deprecatedNode>
                <entities>
                    <salesman>
                        <table>salesman</table>
                    </salesman>
                    <salesman_address>
                        <table>salesman_address</table>
                    </salesman_address>
                    <salesman_price>
                        <table>salesman_price</table>
                    </salesman_price>
                </entities>
            </salesman_resource>
        </models>
        <blocks>
            <salesman>
                <class>Ccc_Salesman_Block</class>
            </salesman>
        </blocks>
        <helpers>
            <salesman>
                <class>Ccc_Salesman_Helper</class>
            </salesman>
        </helpers>
    </global>
    <admin>
        <routers>
            <salesman>
                <use>admin</use>
                <args>
                    <module>Ccc_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
        <layout>
            <updates>
                <salesman>
                    <file>salesman.xml</file>
                </salesman>
            </updates>
        </layout>
    </admin>
</config>